#:import dp kivy.metrics.dp

<VaultWindow>:
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)

    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # dark matte background
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Lucirion Password Manager"
        font_size: '20sp'
        color: 1, 1, 1, 1
        size_hint_y: None
        height: dp(40)

    TextInput:
        id: search_input
        hint_text: "Search Labels"
        multiline: False
        size_hint_y: None
        height: dp(40)
        background_normal: ''
        background_active: ''
        background_color: 0.2, 0.2, 0.2, 1
        foreground_color: 1, 1, 1, 1
        cursor_color: 1, 1, 1, 1

    ScrollView:
        GridLayout:
            id: entry_list
            cols: 1
            spacing: dp(5)
            size_hint_y: None
            height: self.minimum_height

    BoxLayout:
        size_hint_y: None
        height: dp(50)
        spacing: dp(10)

        Button:
            text: "Add"
            background_normal: ''
            background_color: 0.25, 0.45, 0.75, 1
            color: 1, 1, 1, 1
            on_release: root.handle_action(self)

        Button:
            text: "View"
            background_normal: ''
            background_color: 0.25, 0.45, 0.75, 1
            color: 1, 1, 1, 1
            on_release: root.handle_action(self)

        Button:
            text: "Delete"
            background_normal: ''
            background_color: 0.25, 0.45, 0.75, 1
            color: 1, 1, 1, 1
            on_release: root.handle_action(self)
